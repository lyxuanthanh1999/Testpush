@model DashboardFeaturesViewModel
    <!--====== Dashboard Features ======-->
<div class="dash__box dash__box--bg-white dash__box--shadow u-s-m-b-30">
    <div class="dash__pad-1">

        <span class="dash__text u-s-m-b-16">Xin chào, @Model.FullName</span>
        <ul class="dash__f-list">
            <li>
                @if (Model.NameDashBoard.Equals("My Profile"))
                {
                    <a class="dash-active" href="/my-profile.html">Thông tin cá nhân</a>
                }
                else
                {
            <a href="/my-profile.html">Thông tin cá nhân</a>
                }
            </li>
            <li>
                @if (Model.NameDashBoard.Equals("Active Course"))
                {
                    <a class="dash-active" href="/active-course.html">Kích hoạt khóa học</a>
                }
                else
                {
            <a href="/active-course.html">Kích hoạt khóa học</a>
                }
            </li>
            <li>
                @if (Model.NameDashBoard.Equals("My Orders"))
                {
                    <a class="dash-active" href="/manage-orders.html">Đơn hàng</a>
                }
                else
                {
            <a href="/manage-orders.html">Đơn hàng</a>
                }
            </li>
            <li>
                @if (Model.NameDashBoard.Equals("My Courses"))
                {
                    <a class="dash-active" href="/my-courses.html">Khóa học</a>
                }
                else
                {
            <a href="/my-courses.html">Khóa học</a>
                }
            </li>
            <li>
                @if (Model.NameDashBoard.Equals("My Announcements"))
                {
                    <a class="dash-active" href="/my-announcement.html">Thông báo</a>

                }
                else
                {
            <a href="/my-announcements.html">Thông báo</a>
                }
            </li>
        </ul>
    </div>
</div>
<div class="dash__box dash__box--bg-white dash__box--shadow dash__box--w">
    <div class="dash__pad-1">
        <ul class="dash__w-list">
            <li>
                <div class="dash__w-wrap">

                    <span class="dash__w-icon dash__w-icon-style-1"><i class="fas fa-cart-arrow-down"></i></span>

                    <span class="dash__w-text">@Model.CountOrderPlaced</span>

                    <span class="dash__w-name">Đơn hàng hoàn thành</span>
                </div>
            </li>
            <li>
                <div class="dash__w-wrap">

                    <span class="dash__w-icon dash__w-icon-style-2"><i class="fas fa-times"></i></span>

                    <span class="dash__w-text">@Model.CountCanceledOrder</span>

                    <span class="dash__w-name">Hủy đơn / Trả hàng</span>
                </div>
            </li>
            <li>
                <div class="dash__w-wrap">

                    <span class="dash__w-icon dash__w-icon-style-3"><i class="fas fa-shipping-fast"></i></span>

                    <span class="dash__w-text">@Model.CountNewOrder</span>

                    <span class="dash__w-name">Đơn mới</span>
                </div>
            </li>
        </ul>
    </div>
</div>
<!--====== End - Dashboard Features ======-->