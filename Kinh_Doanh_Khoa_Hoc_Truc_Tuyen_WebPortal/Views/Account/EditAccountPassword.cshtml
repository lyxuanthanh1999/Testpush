@model ChangePasswordViewModel
<!--====== Section 1 ======-->
<div class="u-s-p-y-30">
    <!--====== Section Content ======-->
    <div class="section__content">
        <div class="container">
            <div class="breadcrumb">
                <div class="breadcrumb__wrap">
                    <ul class="breadcrumb__list">
                        <li class="has-separator">
                            <a href="/">Trang chủ</a>
                        </li>
                        <li class="has-separator">
                            <a href="/my-profile.html">Thông tin cá nhận</a>
                        </li>
                        <li class="is-marked">
                            <a href="#">Đổi mật khẩu</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!--====== End - Section 1 ======-->
<!--====== Section 2 ======-->
<div class="u-s-p-b-30">

    <!--====== Section Content ======-->
    <div class="section__content">
        <div class="dash">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3 col-md-12">
                        <!--====== Dashboard Features ======-->
                        @await Component.InvokeAsync("DashboardFeatures", Model.NameDash)
                        <!--====== End - Dashboard Features ======-->
                    </div>
                    <div class="col-lg-9 col-md-12">
                        <div class="dash__box dash__box--shadow dash__box--radius dash__box--bg-white u-s-m-b-30">
                            <div class="dash__pad-2">
                                <h1 class="dash__h1 u-s-m-b-30"><a href="/my-profile.html"><i class="fas fa-chevron-circle-left" style="line-height: 1;color: #fa4400;font-size: 18px;margin-right: 5px;"></i></a>Đổi mật khẩu</h1>
                                <div class="row">
                                    <div class="col-lg-12 u-s-m-b-30">
                                        <form class="dash-edit-p" method="post">
                                            <div asp-validation-summary="All" class="text-error u-s-m-b-15"></div>
                                            <div class="u-s-m-b-30">
                                                <input asp-for="@Model.Id" type="hidden" />
                                                <label class="gl-label" for="reg-current-password">Mật khẩu hiện tại <sup>*</sup></label>
                                                <input class="input-text input-text--primary-style" type="password" asp-for="@Model.OldPassword" id="reg-current-password" placeholder="Nhập mật khẩu hiện tại">
                                                <span asp-validation-for="@Model.OldPassword" class="text-error"></span>
                                            </div>
                                            <div class="u-s-m-b-30">
                                                <label class="gl-label" for="reg-new-password">Mật khẩu mới <sup>*</sup></label>
                                                <input class="input-text input-text--primary-style" type="password" asp-for="@Model.NewPassword" id="reg-new-password" placeholder="Nhập mật khẩu mới">
                                                <span asp-validation-for="@Model.NewPassword" class="text-error"></span>
                                            </div>
                                            <div class="u-s-m-b-30">
                                                <label class="gl-label" for="reg-confirm-new-password">Xác nhận mật khẩu mới <sup>*</sup></label>
                                                <input class="input-text input-text--primary-style" type="password" asp-for="@Model.ConfirmNewPassword" id="reg-confirm-new-password" placeholder="Nhập xác nhận mật khẩu mới">
                                                <span asp-validation-for="@Model.ConfirmNewPassword" class="text-error"></span>
                                            </div>
                                            <button class="btn btn--e-brand-b-2" type="submit">Lưu</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--====== End - Section Content ======-->
</div>
<!--====== End - Section 2 ======-->