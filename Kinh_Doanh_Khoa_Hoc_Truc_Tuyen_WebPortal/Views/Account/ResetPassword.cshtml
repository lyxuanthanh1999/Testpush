@model ResetPasswordViewModel
<!--====== Section 1 ======-->
<div class="u-s-p-y-30">

    <!--====== Section Content ======-->
    <div class="section__content">
        <div class="container">
            <div class="breadcrumb">
                <div class="breadcrumb__wrap">
                    <ul class="breadcrumb__list">
                        <li class="has-separator">

                            <a href="/">Trang chủ</a>
                        </li>
                        <li class="is-marked">

                            <a href="#">Khôi phục mật khẩu</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!--====== End - Section 1 ======-->
<!--====== Section 2 ======-->
<div class="u-s-p-b-30">
    <!--====== Section Content ======-->
    <div class="section__content">
        <div class="container">
            <div class="row row--center">
                <div class="col-lg-6 col-md-8 u-s-m-b-30">
                    <div class="l-f-o">
                        <div class="l-f-o__pad-box">
                            <h1 class="u-s-m-b-30" style="text-align: center; align-items: center; font-size: 35px; line-height: 30px; color: black">Khôi Phục Mật Khẩu</h1>
                            <form class="l-f-o__form" method="post">
                                <div asp-validation-summary="All" class="text-error u-s-m-b-15"></div>
                                <input asp-for="Token" type="hidden" />
                                <input asp-for="UserId" type="hidden" />
                                <div class="u-s-m-b-30">
                                    <label class="gl-label" for="reset-password">Mật khẩu mới <sup>*</sup></label>
                                    <input class="input-text input-text--primary-style" type="password" name="Password" asp-for="Password" id="reset-password" placeholder="Nhập mật khẩu mới">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="u-s-m-b-30">
                                    <label class="gl-label" for="reset-confirm-password">Xác nhận mật khẩu mới <sup>*</sup></label>
                                    <input class="input-text input-text--primary-style" type="password" name="ConfirmPassword" asp-for="ConfirmPassword" id="reset-confirm-password" placeholder="Nhập mật khẩu mới">
                                    <span asp-validation-for="ConfirmPassword" class="text-error"></span>
                                </div>
                                <div class="u-s-m-b-30">
                                    <button class="btn btn--e-transparent-brand-b-2" type="submit">Khôi Phục Mật Khẩu</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--====== End - Section Content ======-->
</div>
<!--====== End - Section 2 ======-->